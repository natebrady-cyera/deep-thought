# Deep Thought Configuration

# Application
APP_NAME=Deep Thought
DEBUG=false

# API
API_PREFIX=/api/v1
ALLOWED_ORIGINS=http://localhost:3000

# Database
DATABASE_URL=sqlite:///./data/deep-thought.db

# SAML Authentication
SAML_IDP_METADATA_URL=https://your-idp.example.com/metadata
SAML_SP_ENTITY_ID=https://your-deep-thought.example.com
# SAML_ACS_URL is auto-constructed if not provided

# Bootstrap Admin
BOOTSTRAP_ADMIN_EMAIL=admin@cyera.io

# JWT (change secret_key in production!)
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# AWS Bedrock (for Claude)
AWS_BEDROCK_REGION=us-east-1
AWS_BEDROCK_MODEL_ID=anthropic.claude-opus-4-20250514
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# Anthropic API (future)
# ANTHROPIC_API_KEY=your-anthropic-api-key

# Rate Limiting
API_RATE_LIMIT=100

# Logging
LOG_LEVEL=INFO
